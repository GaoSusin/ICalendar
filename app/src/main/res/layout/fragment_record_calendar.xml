<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myspace="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.susin.icalendar.widget.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        myspace:title="记录" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divideline"
            android:orientation="vertical"
            android:showDividers="middle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_bianbian"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="便便"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/iv_edit_shit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_edit" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divideline"
                android:padding="10dp"
                android:showDividers="middle">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_pimple"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="痘痘"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/iv_edit_pimple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_edit" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divideline"
                android:padding="10dp"
                android:showDividers="middle">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_diarrhea"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="腹泻"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/iv_edit_diarrhea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_edit" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divideline"
                android:padding="10dp"
                android:showDividers="middle">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_sheep"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="困倦"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/iv_edit_sheep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_edit" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divideline"
                android:padding="10dp"
                android:showDividers="middle">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_insomnia"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="失眠"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/iv_edit_insomnia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_edit" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divideline"
                android:padding="10dp"
                android:showDividers="middle">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_headache"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="头痛"
                    android:textSize="16dp"
                    android:id="@+id/textView"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:id="@+id/iv_edit_headache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_edit" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divideline"
                android:padding="10dp"
                android:showDividers="middle">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_sore_throat"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="咽喉炎"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/iv_edit_sore_throat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ic_edit" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
